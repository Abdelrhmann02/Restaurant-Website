<html lang="en">
<head>
	{{>head}}
</head>
<body>
	<header>
		{{>admin_header}}
	</header>
	
	<section class="admin-page">
	<h1>Delete Meal</h1>
	<div class="container">
		<form method="post" role="form">
			<div class="row">
			{{#Meals}}
				<div class="col-sm-4">
					<div class ="form-group">
						<input type="checkbox" id={{Name}} name="Meal" value="{{Name}}">
