					</div>
				</div>
			{{/Meals}}
			</div>

			<div class="row">
				<div class="col">
					<div class="form-group">
						<input type="submit" value="Delete" class="btn2">
					</div>
				</div>
			</div>
		</form>
	</div>

	</section>
	
	{{>script}}
